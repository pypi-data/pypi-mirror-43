{% extends "skeleton_main.jinja2" %}
{% block header_title %}Delivery template{% endblock %}
{% block main_content %}
<!-- Each sheet element should have the class "sheet" -->
<!-- "padding-**mm" is optional: you can set 10, 15, 20 or 25 -->
<section class="sheet padding-10mm">
  <article>
    <table class="table">
      <thead>
        <tr>
          <th><abbr title="Product code">Code</abbr></th>
          <th><abbr title="Product description">Desc.</abbr></th>
          <th><abbr title="Unit price">Price</abbr></th>
          <th><abbr title="Quantity">Qty</abbr></th>
          <th><abbr title="Total">Total</abbr></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>REF1234</td>
          <td>PRoduct description of REF1234<br>line 01<br> line 02</td>
          <td>100.00 €</td>
          <td>2</td>
          <td>200.00 €</td>
        </tr>
      </tbody>
    </table>
  </article>
</section>
{% endblock %}
