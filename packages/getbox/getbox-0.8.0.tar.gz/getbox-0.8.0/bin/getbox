#!/usr/bin/env python3
from __future__ import print_function
import subprocess
import argparse
import botocore
import getpass
import shutil
import random
import socket
import errno
import boto3
import time
import json
import sys
import os
import re

raw_input = input
supports_color = hasattr(sys.stdout, 'isatty') and sys.stdout.isatty()
STYLES = {
    'error': '\033[1;31m',
    'success': '\033[1;37m',
    'dbname': '\033[1;37m',
    'blue': '\033[1;34m',
    'green': '\033[1;32m',
    'red': '\033[1;31m',
    'normal': '\033[0m',
    'bold': '\033[1m'
}


def print_(msg, file=sys.stderr, style=None, end="\n"):
    if supports_color and style in STYLES:
        print(STYLES[style] + msg, '\033[0m', file=file, end=end)
    else:
        print(msg, file=file, end=end)


def get_argv_config_dict():
    res = {}
    for item in sys.argv:
        parts = item.split('=')
        if len(parts) == 2:
            res[parts[0]] = parts[1]
    return res


def get_account_id():
    return boto3.client('sts').get_caller_identity()['Account']


def guess_subnets():
    client = boto3.client('ec2')
    try:
        r = client.describe_subnets()
        return ' '.join([(s['AvailabilityZone'] + ':' + s['SubnetId']) for s in r['Subnets'][:3]])
    except botocore.exceptions.ClientError:
        return ''


def guess_keyname():
    client = boto3.client('ec2')
    try:
        r = client.describe_key_pairs()
        return r['KeyPairs'][0]['KeyName']
    except botocore.exceptions.ClientError:
        return ''


def guess_ami():
    client = boto3.client('ec2')
    images = client.describe_images(Owners=['099720109477'],
                                    Filters=[{'Name': 'architecture', 'Values': ['x86_64']},
                                             {'Name': 'virtualization-type', 'Values': ['hvm']},
                                             {'Name': 'root-device-type', 'Values': ['ebs']},
                                             {'Name': 'sriov-net-support', 'Values': ['simple']}])['Images']
    candidates = [i for i in images if i['Name'].startswith('ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-')]
    return max(candidates, key=lambda x: x['CreationDate'])['ImageId']


def get_latest_dlami_id():
    client = boto3.client('ec2')
    images = client.describe_images(Owners=['898082745236'],
                                    Filters=[{'Name': 'architecture', 'Values': ['x86_64']},
                                             {'Name': 'virtualization-type', 'Values': ['hvm']},
                                             {'Name': 'root-device-type', 'Values': ['ebs']}])['Images']
    candidates = [i for i in images if 'Ubuntu' in i['Name']]
    return max(candidates, key=lambda x: x['CreationDate'])['ImageId']


def subnets_fromstr(s):
    res = {}
    for item in s.split():
        zone, subnet = item.split(':')
        res[zone] = subnet
    return res


class Config:
    def __init__(self):
        self._config = None
        self._config_updated = False
        self._args_config = None

    def validate(self):
        for k in dir(self):
            if k.upper() == k:
                getattr(self, k)()

    def get_config(self, k, defaultval, fromstr=str, required=False, guess=lambda: ''):
        if self._config is None:
            config_path = os.path.expanduser("~/.getbox")
            if os.path.exists(config_path):
                with open(config_path) as f:
                    _config_json = json.loads(f.read())
                    # If config is a list, we got a per-account setup here
                    if isinstance(_config_json, list):
                        current_profile = None
                        current_account_id = get_account_id()
                        for profile in _config_json:
                            if not profile.get('account_id') and current_profile is None:
                                current_profile = profile
                            elif profile.get('account_id') == current_account_id:
                                current_profile = profile
                                break
                        if current_profile is None:
                            print_('Cannot find config profile for account id {}'.format(current_account_id), style='error')
                            sys.exit(1)
                        self._config = current_profile
                    else:
                        self._config = _config_json
            else:
                self._config = {}

            self._args_config = get_argv_config_dict()

        if k in self._args_config:
            res = fromstr(self._args_config[k])
        else:
            res = self._config.get(k, defaultval)

        if required and not res:
            g = guess()
            s = raw_input('Required config parameter %s not set. Please input %s [%s]> ' % (k, k, g))
            if g and not s.strip():
                res = fromstr(g)
            else:
                res = fromstr(s)
            if not res:
                print_("%s is required, exiting" % k)
                sys.exit(1)
            self._config[k] = res
            self._config_updated = True

        return res

    def EXTRA_TAGS(self):
        return self.get_config('extra_tags', {})

    def OWNER_TAG_NAME(self):
        return self.get_config('owner_tag_name', 'owner')

    def OWNER(self):
        return self.get_config('owner', None)

    def SSH_USER(self):
        return self.get_config('ssh_user', 'ubuntu')

    def SSH_WAIT_TIMEOUT_SECONDS(self):
        return self.get_config('ssh_wait_timeout_seconds', 600)

    def ROOT_SIZE_GB(self):
        return self.get_config('root_size_gb', 80, fromstr=int)

    def AMI_ID(self):
        return self.get_config('ami_id', '', required=True, guess=guess_ami)

    def CUDA_AMI_ID(self):
        return self.get_config('cuda_ami_id', None)

    def SSH_KEY_NAME(self):
        return self.get_config('ssh_key_name', '', required=True, guess=guess_keyname)

    def IAM_ROLE_ARN(self):
        return self.get_config('iam_role_arn', '', required=True)

    def SSH_FLAGS(self):
        return self.get_config('ssh_flags', '-A')

    def SUBNETS(self):
        return self.get_config('subnets', {}, required=True, guess=guess_subnets, fromstr=subnets_fromstr)

    def SECURITY_GROUPS(self):
        return self.get_config('security_groups', [])

    def SPOT_PRICE(self):
        return self.get_config('spot_price', None)

    def EBS_IOPS(self):
        return self.get_config('ebs_iops', None, int)

    def EBS_VOLTYPE(self):
        return self.get_config('ebs_volume_type', 'gp2')

    def EXTRA_INIT_COMMANDS(self):
        return self.get_config('extra_init_commands', [])

    def maybe_save(self):
        config_path = os.path.expanduser("~/.getbox")
        if not os.path.exists(config_path):
            print_("Saving config to %s" % config_path)
            with open(config_path, 'w') as f:
                json.dump(self._config, f)
        elif self._config_updated:
            print_("Overwrite config at %s? [y/N] " % config_path, end='')
            if raw_input('') in ('Y', 'y'):
                with open(config_path, 'w') as f:
                    json.dump(self._config, f)


config = Config()

