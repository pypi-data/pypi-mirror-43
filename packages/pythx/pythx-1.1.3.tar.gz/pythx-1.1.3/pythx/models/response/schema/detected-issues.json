{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "minItems": 1,
    "items": {
        "type": "object",
        "required": [
            "issues",
            "sourceType",
            "sourceFormat",
            "sourceList",
            "meta"
        ],
        "properties": {
            "issues": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "swcID",
                        "swcTitle",
                        "description",
                        "severity",
                        "locations",
                        "extra"
                    ],
                    "properties": {
                        "swcID": {
                            "type": "string",
                            "default": ""
                        },
                        "swcTitle": {
                            "type": "string"
                        },
                        "description": {
                            "type": "object",
                            "required": [
                                "head",
                                "tail"
                            ],
                            "properties": {
                                "head": {
                                    "type": "string"
                                },
                                "tail": {
                                    "type": "string"
                                }
                            }
                        },
                        "severity": {
                            "type": "string"
                        },
                        "locations": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "sourceMap"
                                ],
                                "properties": {
                                    "sourceMap": {
                                        "type": "string"
                                    },
                                    "sourceType": {
                                        "type": "string"
                                    },
                                    "sourceFormat": {
                                        "type": "string"
                                    },
                                    "sourceList": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        },
                        "extra": {
                            "type": "object"
                        }
                    }
                }
            },
            "sourceType": {
                "type": "string"
            },
            "sourceFormat": {
                "type": "string"
            },
            "sourceList": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "meta": {
                "type": "object"
            }
        }
    }
}
