###########################################################################                         
# Snippets to create anki cards using vim
###########################################################################
extends tex

priority -50

snippet testtt "Just a test"
testtt
endsnippet

snippet la "Block [latex]"
[latex]
${1}
[/latex]
endsnippet

snippet lai "Inline [latex]"
[latex]${1}[/latex]
endsnippet

snippet img "image-path"
<img = src ${1:/tmp/}$0 />
$2
endsnippet

snippet "c([c\d]){1}" "{{c1::Cloze}}" r
{{c`!p snip.rv = match.group(1) if match.group(1) != 'c' else "1"`::${1:Cloze}}}
endsnippet

snippet $$ "[$]MATH[/S]" iA
[$]${1:MATH}[/$]
endsnippet
