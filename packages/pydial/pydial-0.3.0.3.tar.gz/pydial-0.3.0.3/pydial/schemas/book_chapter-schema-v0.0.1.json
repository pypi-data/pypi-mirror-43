{
    "$id": "http://dial.uclouvain.be/schemas/dial-bookchapter.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "JSON schema describing a book chapter into DIAL",
    "type": "object",

    "allOf": [
        { "$ref": "http://dial.uclouvain.be/schemas/basics-publications.json" },
        { "properties": {
            "type":{
                "properties": {
                    "document-type": {
                        "$comment": "limit main type to 'book' type",
                        "enum": [
                            "book-chapter"
                        ]
                    },
                    "document-subtype": {
                        "$comment": "limit subtype to some defined values for an book chapter",
                        "enum": [
                            "Autre",
                            "Chapitre",
                            "Avant-propos / pr√©face / postface"
                        ]
                    }
                }
            },
            "authors":{
                "items":{
                    "properties": {
                        "role": {
                            "$comment": "Limit role of authors to a subset of possible roles defined for authors",
                            "enum": [
                                "author",
                                "collaborator",
                                "translator",
                                "scientific publisher",
                                "preface writer"
                            ]
                        }
                    }
                }
            },
            "publication-status":{
                "$ref": "http://dial.uclouvain.be/schemas/publication-status.json"
            },
            "doi": {
                "$ref": "http://dial.uclouvain.be/schemas/doi.json"
            },
            "host-document":{
                "$ref": "http://dial.uclouvain.be/schemas/host-document.json"
            },
            "publishers": {
                "$ref": "http://dial.uclouvain.be/schemas/publishers.json"
            },
            "series": {
                "$ref": "http://dial.uclouvain.be/schemas/series.json"
            }
        }},
        { "required": ["host-document"]}
    ]
}