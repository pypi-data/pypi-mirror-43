{
  "$id": "http://dial.uclouvain.be/schemas/dial-report.json",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "JSON schema describing a report into DIAL",
  "type": "object",

  "allOf": [
        { "$ref": "http://dial.uclouvain.be/schemas/basics-publications.json" },
        { "properties": {
            "type":{
                "properties": {
                    "document-type": {
                        "$comment": "limit main type to 'book' type",
                        "enum": [
                            "report"
                        ]
                    },
                    "document-subtype": {
                        "$comment": "limit subtype to some defined values for a book",
                        "enum": [
                            "Interne",
                            "Externe"
                        ]
                    }
                }
            },
            "authors":{
                "items":{
                    "properties": {
                        "role": {
                            "$comment": "Limit role of authors to a subset of possible roles defined for authors",
                            "enum": [
                                "author",
                                "collaborator",
                                "translator"
                            ]
                        }
                    }
                }
            },
            "number-of-pages": {
                "title": "Number of pages",
                "description": "the number of pages of the book",
                "type": "number",
                "minimum": 1
            },
            "publishers": {
               "$ref": "http://dial.uclouvain.be/schemas/publishers.json"
            },
            "references": {
                "title": "References",
                "description": "Report references (internal number, ...)",
                "type": "array",
                "minItems": 1,
                "items": {
                    "type": "object",
                    "required": ["institution", "id"],
                    "additionalProperties": false,
                    "properties": {
                        "institution": {
                            "title": "Institution",
                            "description": "The institution name producing this reference",
                            "type": "string"
                        },
                        "id": {
                            "title": "ID",
                            "description": "The internal ID of the report associated for the institution",
                            "type": "string"
                        },
                        "period": {
                            "title": "Period",
                            "description": "The period during which the report was published",
                            "type": "string"
                        }
                    }
                }
            }
        }}
    ]

}