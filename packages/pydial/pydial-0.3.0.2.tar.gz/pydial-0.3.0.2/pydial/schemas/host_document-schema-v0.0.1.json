{
    "$id": "http://dial.uclouvain.be/schemas/host-document.json",
    "$schema": "http://json-schema.org/draft-06/schema#",

    "title": "Host document informations",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "title": {
            "title": "Host document title",
            "description": "The complete name of the host document",
            "type": "string",
            "minLength": 1
        },
        "isbn": {
            "title": "ISBN",
            "description": "The ISBN of the host document ; typically the book barcode. Without the dashes",
            "type": "string",
            "pattern": "^97[8|9][0-9]{10}$"
        },
        "authors": {
            "title": "Authors",
            "description": "Authors list of the host document",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["name"],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "title": "Author name",
                        "type": "string",
                        "minLength": 2
                    },
                    "role": {
                        "title": "Author role",
                        "type": "string",
                        "enum": [
                            "author",
                            "translator",
                            "scientific publisher"
                         ]
                    }
                }
            }
        },
        "type": {
            "title": "host document type",
            "type": "string",
            "enum": [
                "proceedings",
                "dictionary / encyclopedia",
                "book",
                "handbook / textbook",
                "mixed",
                "Other"
            ]
        },
        "edition-statement": {
            "title": "Edition statement",
            "description": "2nd edition ; special edition, ... ",
            "type": "string",
            "minLength": 1
        },
        "page": {
            "title": "Pages",
            "description": "The start page and the endpage for this book chapter in this issue",
            "type": "string"
        },
        "year":{
            "title": "Year",
            "description": "The publication year of this host document",
            "anyOf": [
                { "type": "integer", "minimum": 1800, "maximum": 2100 },
                { "type": "string", "enum": ["na"] }
            ]
        },
        "peer-reviewed": {
            "title": "Peer-reviewed",
            "description": "Is this journal is peer-reviewed",
            "type": "boolean"
        }
    },
    "required": ["title", "isbn"]
}